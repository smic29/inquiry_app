<%= form_with(model: inquiry) do |form| %>
  <% if inquiry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
        <% inquiry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container shadow-lg p-5 rounded">
    <div class="form-floating mb-3">
      <%= form.text_field :name, class:"form-control", placeholder:"test" %>
      <%= form.label :name %>
    </div>
    <div class="form-floating mb-3">
      <%= form.text_field :email, class:"form-control", placeholder:"test" %>
      <%= form.label :email %>
    </div>
    <div class="form-floating mb-3">
      <%= form.text_area :description, class:"form-control", placeholder:"test", style: "height: 100px" %>
      <%= form.label :description %>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-floating mb-3">
          <%= form.number_field :budget, class:"form-control", placeholder:"test" %>
          <%= form.label :budget %>
        </div>
      </div>
      <div class="col">
        <div class="form-floating mb-3">
          <%= form.select :inquiry_type, 
            Inquiry.inquiry_types.keys.map { |key| [key.humanize, key] }, 
            { prompt: "Select a type" }, 
            class: "form-select" %>
          <%= form.label :inquiry_type, style: "display: block", class:"form-label" %>
        </div>
      </div>
    </div>

    <div class="text-center">
      <%= form.submit class:"btn btn-success" %>
    </div>
  </div>

<% end %>
