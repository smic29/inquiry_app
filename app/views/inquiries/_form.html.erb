<%= form_with(model: inquiry) do |form| %>
  <% if inquiry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
        <% inquiry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :budget, style: "display: block" %>
    <%= form.number_field :budget %>
  </div>

  <div>
    <%= form.label :inquiry_type, style: "display: block" %>
    <%= form.select :inquiry_type, Inquiry.inquiry_types.keys.map { |key| [key.humanize, key] } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
